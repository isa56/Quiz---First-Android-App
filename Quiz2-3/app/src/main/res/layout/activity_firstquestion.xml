<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frstQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/gato1"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/gato1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pergunta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quais cores os gatos enxergam?"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/gato1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/botao1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3040c4"
        android:text="Vermelho \n e azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1"
        app:layout_constraintVertical_bias="0.166"
        android:enabled="true"/>

    <Button
        android:id="@+id/botao1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3040c4"
        android:text="Azul e \n amarelo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toEndOf="@+id/botao1a"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1"
        app:layout_constraintVertical_bias="0.166"
        android:enabled="true"/>

    <Button
        android:id="@+id/prox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#fbcb64"
        android:onClick="secondQuestion"
        android:text="PrÃ³ximo"
        android:textColor="#3040c4"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gato1"
        android:enabled="false"/>

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione sua resposta"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prox1" />

</androidx.constraintlayout.widget.ConstraintLayout>